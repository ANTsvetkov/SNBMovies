    @model IEnumerable<Movie>
    @{
        ViewData["Title"] = "List of Movies";
    }

    <!doctype html>
    <html lang="zxx">
    <body>
        <!--/breadcrumbs -->
        <div class="w3l-breadcrumbs">
            <nav id="breadcrumbs" class="breadcrumbs">
                <div class="container page-wrapper">
                    <a href="~/Home/Index">Начало</a> » <span class="breadcrumb_last" aria-current="page">Филми</span>
                </div>
            </nav>
        </div>
        <!--//breadcrumbs -->

        <section class="container">
            <section class="container-fluid billboard-outline">
                <div class="card-title">
                    <h1 class="title">Филми</h1>
                </div>
                <div style="display: flex">
                    <!-- -->
                    Филмите, са един от най-добрите начини за развлечение, независмо дали за забавни, страшни, драматични или романтични. Толкова много заглавия, толкова много преживявания.
                    <!-- -->
                </div>
            </section>
        </section>

        <div class="search-top">
            <form asp-action="Search" class="form-inline search-box" style="display: flex; justify-content:center; margin-top:20px;">
                <input name="searchTerm" type="search" class="form-control" placeholder="Потърси филм..." />
                <button class="btn btn-outline-dark search-hny my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>

        <!--/tabs-->
        <section class="w3l-albums py-5" id="projects">
            <div class="container py-lg-4">
                <div class="row">
                    <div class="col-lg-12 mx-auto">
                        <!--Horizontal Tab-->
                        <div id="parentHorizontalTab">
                            <ul class="resp-tabs-list hor_1" style="display:flex;justify-content:center;">
                                <li>Нови</li>
                                <li>Популярни</li>
                                <li>Препоръчителни</li>
                                <li>Предстоящи</li>
                                <div class="clear"></div>
                            </ul>
                            <div class="resp-tabs-container hor_1">
                                <div class="albums-content">
                                    <div class="row">
                                        <!--/set1-->
                                        <div style="display: flex;   flex-wrap: wrap;">
                                            @foreach (var item in Model)
                                            {
                                                if (item.Category.ToString() == "New")
                                                {
                                                    <div class="col-lg-4 new-relise-gd mt-lg-0 mt-0">
                                                        <div style="width:275px;">
                                                            <div class="slider-info">
                                                                <div class="img-circle">
                                                                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id">

                                                                        <img src="@Url.Content(item.ImageURL)" class="img-fluid"
                                                                     alt="author image">
                                                                        <div class="overlay-icon">

                                                                            <span class="fa fa-shopping-bag video-icon" aria-hidden="true"></span>
                                                                        </div>
                                                                    </a>
                                                                </div>
                                                                <div class="message">
                                                                    <a class="author-book-title" href="genre.html">@item.Title</a>
                                                                    <h4>
                                                                        <span class="post">
                                                                            <span class="fa fa-clock-o"> </span> @item.Genre
                                                                        </span>
                                                                        <span class="post fa fa-television text-right"></span>
                                                                    </h4>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <!--//set1-->
                                    </div>
                                </div>
                                <div class="albums-content">
                                    <div class="row">
                                        <!--/set2-->
                                        <div style="display: flex;   flex-wrap: wrap;">
                                            @foreach (var item in Model)
                                            {
                                                if (item.Category.ToString() == "Popular")
                                                {
                                                    <div class="col-lg-4 new-relise-gd mt-lg-0 mt-0">
                                                        <div style="width:275px;">
                                                            <div class="slider-info">
                                                                <div class="img-circle">
                                                                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id">

                                                                        <img src="@Url.Content(item.ImageURL)" class="img-fluid"
                                                                     alt="author image">
                                                                        <div class="overlay-icon">

                                                                            <span class="fa fa-shopping-bag video-icon" aria-hidden="true"></span>
                                                                        </div>
                                                                    </a>
                                                                </div>
                                                                <div class="message">
                                                                    <a class="author-book-title" href="genre.html">@item.Title</a>
                                                                    <h4>
                                                                        <span class="post">
                                                                            <span class="fa fa-clock-o"> </span> @item.Genre
                                                                        </span>
                                                                        <span class="post fa fa-television text-right"></span>
                                                                    </h4>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <!--//set2-->
                                    </div>
                                </div>
                                <div class="albums-content">
                                    <div class="row">
                                        <!--/set3-->
                                        <div style="display: flex;   flex-wrap: wrap;">
                                            @foreach (var item in Model)
                                            {
                                                if (item.Category.ToString() == "MustWatch")
                                                {
                                                    <div class="col-lg-4 new-relise-gd mt-lg-0 mt-0">
                                                        <div style="width:275px;">
                                                            <div class="slider-info">
                                                                <div class="img-circle">
                                                                    <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id">

                                                                        <img src="@Url.Content(item.ImageURL)" class="img-fluid"
                                                                     alt="author image">
